<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightorange"
    tools:context="com.bleedbytes.riguserdata.Signup">

    <RelativeLayout
        android:layout_width="337dp"
        android:layout_height="391dp"
        android:background="@color/lightgreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.652">

        <EditText
            android:id="@+id/etEmailup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:layout_above="@+id/etPassup"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="34dp" />

        <EditText
            android:id="@+id/etPassup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/etEmailup" />

        <Button
            android:id="@+id/btSignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="311dp"
            android:layout_below="@+id/etPassup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp" />
        <TextView
            android:id="@+id/tvSignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account Sign In here..."
            android:layout_below="@+id/btSignup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
